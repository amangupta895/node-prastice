<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registration Page</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/Assest/css/register.css" />
</head>

<body>
  <!-- Header (optional: remove if you want absolutely clean full-page form) -->
  <%- include('./common/header.ejs');%>
  <%-include('./common/Banner.ejs');%>

  <!-- Fullscreen Centered Form -->
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="register-card text-center">
      <h3 class="mb-4">Create Account</h3>

      <form action="/register" method="POST">
        <div class="mb-3 text-start">
          <label class="form-label">Full Name</label>
          <input type="text" class="form-control" name="username" placeholder="Enter your name" required />
        </div>

        <div class="mb-3 text-start">
          <label class="form-label">Email address</label>
          <input type="email" class="form-control" name="email" placeholder="Enter your email" required />
        </div>

        <div class="mb-3 text-start">
          <label class="form-label">Password</label>
          <input type="password" class="form-control" name="password" placeholder="Create a password" required />
        </div>

        <div class="d-grid mb-3">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>

        <div class="text-muted">
          <small>Already have an account? <a href="/login">Login</a></small>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
