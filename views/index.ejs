<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./Assest/css/product.css">
</head>
<body>
    <%-include('./common/header.ejs');%>
    <%-include('./common/Banner.ejs');%>
   

  <!-- hero section -->
  <section class="py-5 bg-light text-center">
    <div class="container">
      <h1 class="display-4 fw-bold">About E-Shop</h1>
      <p class="lead">Your trusted destination for quality products at the best prices.</p>
    </div>
  </section>

  <!-- Our Mission -->
  <section class="py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <img src="./Assest/image/4028484.jpg" class="img-fluid rounded" alt="Our Mission">
        </div>
        <div class="col-md-6">
          <h2>Our Mission</h2>
          <p>At E-Shop, we strive to deliver exceptional value by offering a wide selection of quality products, fast shipping, and top-tier customer service. Whether you're shopping for fashion, electronics, or daily essentials, we are here to make your experience smooth and enjoyable.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-4">Why Choose Us?</h2>
      <div class="row text-center">
        <div class="col-md-4 mb-4">
          <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
          <h5>Fast & Free Shipping</h5>
          <p>We offer quick and free delivery on all eligible orders.</p>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-thumbs-up fa-3x text-primary mb-3"></i>
          <h5>Quality Products</h5>
          <p>Handpicked items from trusted suppliers for maximum satisfaction.</p>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-headset fa-3x text-primary mb-3"></i>
          <h5>Customer Support</h5>
          <p>Our support team is here to help you 24/7 with your concerns.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-5 text-center">
    <div class="container">
      <h2 class="mb-3">Join Thousands of Happy Shoppers</h2>
      <p class="mb-4">Explore our latest collections and experience effortless shopping now.</p>
      <a href="/view-product" class="btn btn-primary btn-lg px-4">Start Shopping</a>
    </div>
  </section>

     <!-- product part start -->

    <div class="container my-5">
      <h2 class="text-center mb-5 fw-bold">Our Products</h2>
  
      <% if (products.length > 0) { %>
        <div class="row g-4">
          <% products.forEach(product => { %>
            <div class="col-md-4">
              <div class="card product-card h-100">
                
                <!-- Image -->
                <img src="/uploads/<%= product.image %>" class="product-image" alt="<%= product.productName %>">
  
                <div class="card-body">
                  <h5 class="product-title"><%= product.productName %></h5>
                  <p class="product-category">Category: <%= product.productCategory %></p>
                  <p class="product-price">$<%= product.productPrice %></p>
                  <p class="text-muted"><%= product.productDescription %></p>
                </div>
  
                <div class="card-footer bg-white border-0  d-flex justify-content-center align-item-center">
                  <a href="/Buy-Now/<%= product._id %>" class="btn btn-primary btn-modern w-45">Buy-Now</a>
                  <a href="/add-to-cart/<%= product._id %>" class="btn btn-success btn-modern w-45 ms-4">Add to Cart</a>

                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-center text-muted">No products available at the moment.</p>
      <% } %>
    </div>


    <%-include('./common/footer.ejs');%>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script> 

</body>
</html>